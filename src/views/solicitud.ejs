<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!--CSS-->
    <link rel="stylesheet" href="css/styleConsult.css">
    <!--Icons-->
    <script src="https://kit.fontawesome.com/62ea397d3a.js" crossorigin="anonymous"></script>
    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital@1&display=swap" rel="stylesheet">
    <title>Ingrese Producto</title>
</head>
<body>
    <div class="container-fluid">
        <h1>Formulario para Agregar Productos</h1>
        <div class="row">
            <div class="col col-form">
                <form name="FSoli" action="/FormularioSolicitud"  method="POST" class="form-custom" enctype="multipart/form-data">

                    <div class="form-custom_nameStore">
                        <input type="text" name="nombre_usuario" placeholder="Nombre de usuario" >
                    </div>
                    
                    <div class="form-custom_desc">
                        <textarea class="form-control" name="motivo" id="exampleFormControlTextarea1" placeholder="Motivo de la solicitud"></textarea>
                    </div>
                    <p>Seleccione tipo solicitud</p>
                    <div class="w3-row padding">
                        <div class="w3-third ">
                          <input id="tipo_solicitud" class="w3-radio" type="radio" name="tipo_solicitud" value="modificacion" >
                        <label>modificacion</label>
                        <br>
                        </div>
                        <div class="w3-third">
                          <input id="tipo_solicitud" class="w3-radio" type="radio" name="tipo_solicitud" value="eliminacion" >
                          <label>eliminacion</label>
                          <br>
                        </div>
                      </div>
                      <p>Seleccione tipo entidad</p>
                      <div class="w3-row padding">
                          <div class="w3-third ">
                            <input id="tipo_entidad" class="w3-radio" type="radio" name="tipo_entidad" value="producto" >
                          <label>producto</label>
                          <br>
                          </div>
                          <div class="w3-third">
                            <input id="tipo_entidad" class="w3-radio" type="radio" name="tipo_entidad" value="emprendedor" >
                            <label>emprendedor</label>
                            <br>
                          </div>
                          <div class="w3-third">
                            <input id="tipo_entidad" class="w3-radio" type="radio" name="tipo_entidad" value="categoria" >
                            <label>categoria</label>
                            <br>
                          </div>
                          <div class="w3-third">
                            <input id="tipo_entidad" class="w3-radio" type="radio" name="tipo_entidad" value="contacto" >
                            <label>contacto</label>
                            <br>
                          </div>
                        </div>
 
                    <div class="form-custom_button">
                        <button type="button" class="btn btn-primary" onclick="validar_vacios()">Solicitar ingreso contacto</button>
                        <a href="/" class="btn btn-warning">Volver a inicio</a>
                    </div>
                </form>

            <div class="col col-hidden">
                <div class="img-question">
                    <img src="img/question.png" alt="">
                </div>
            </div>
          </div>
    </div>
   
</body>
<script>
    function listen(e){
        console.log(e);
        if(e.matches){
            document.querySelector(".col-hidden").style.display='none';
        }else{
            document.querySelector(".col-hidden").style.display='grid';
        }
    }
    let screenPW = window.matchMedia("(max-width: 750px)");
    listen(screenPW);
    screenPW.addListener(listen);

    function validar_vacios(){
        if(document.FSoli.nombre_usuario.value == ''){
            alert("Complete nombre de usuario");
            return 0;
        }
        if(document.FSoli.motivo.value == ''){
            alert("Ingrese motivo");
            return 0;
        }
        if (document.FSoli.tipo_solicitud.value == '' ){
            alert("Seleccione un tipo de solicitud");
            return 0;
        }
        if(document.FSoli.tipo_entidad.value==''){
            alert("Seleccione un tipo de entidad");
            return 0;
        }
        alert("El formulario ha sido enviado");
        document.FSoli.submit();
    }
</script>
</html>
